{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Activate .venv and open interactive shell",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/k",
        ".venv\\Scripts\\activate.bat"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Install d_back Module (Local .venv)",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/build_and_install.ps1",
        "-Environment",
        "local"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Install d_back Module (Dissentin Env)",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/build_and_install.ps1",
        "-Environment",
        "dissentin"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true
      },
      "problemMatcher": []
    }
  ]
}
